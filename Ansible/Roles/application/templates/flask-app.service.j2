[Unit]
Description=Flask Application
After=network.target

[Service]
Type=simple
User={{ app_user }}
Group={{ app_user }}
WorkingDirectory={{ app_directory }}
Environment="PATH={{ app_virtualenv }}/bin"
ExecStart={{ app_virtualenv }}/bin/python {{ app_directory }}/app.py
Restart=always
RestartSec=10

# Security settings
NoNewPrivileges=true
PrivateTmp=true

[Install]
WantedBy=multi-user.target
